<% title("Users") %>

<h1>Users</h1>
<table class="table">
	<thead>
		<th>ID</th>
		<th>Email</th>
		<th>Last Sign in</th>
		<th>Role</th>
		<th colspan="3">Actions</th>
	</thead>

	<tbody>

	<% @users.each do |user|%>
	<tr>
		<td><%= user.id %></td>
		<td><%= user.email %></td>
		<td><%= time_pretty_format(user.last_sign_in_at) %></td>
		<td><%= str_or_na(user.try(:role).try(:name)) %></td>
		<td><%= link_to "Show", user, class: "btn btn-info btn-sm" %></td>
		<td><%= link_to "Edit", edit_user_path(user), class: "btn btn-primary btn-sm" %></td>
		<td><%= link_to "Remove", user, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure?" } %></td>
	</tr>
	<% end %>

	</tbody>

</table>
